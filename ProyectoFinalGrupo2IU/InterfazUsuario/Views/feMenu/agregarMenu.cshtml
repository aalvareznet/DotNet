@model InterfazUsuario.Models.ModeloMenu

@{
    ViewBag.Title = "agregarMenu";
}

<h2>agregarMenu</h2>


@using (Html.BeginForm("accionesEjecucion", "feMenu", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ModeloMenu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-none">
            @Html.LabelFor(model => model.TN_IdMenu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 d-none">
                @Html.EditorFor(model => model.TN_IdMenu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TN_IdMenu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TC_DscMenu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TC_DscMenu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TC_DscMenu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TN_IdTipoMenu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TN_IdTipoMenu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TN_IdTipoMenu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TD_Precio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TD_Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TD_Precio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit" name="accionEjecutar" value="Agregar"
                    class="btn btn-success" title="Agrega nuevo Menu"
                    data-toggle="tooltip" data-container="body" data-placement="right">
                Agregar
            </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "obtenerMenu")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
