@model IEnumerable<InterfazUsuario.Models.ModeloReservacion>

@{
    ViewBag.Title = "Obtener Reservaciones";
}

<h2>Lista de Reservaciones</h2>

<p>
    @Html.ActionLink("Nueva", "agregarReservacion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TN_NumReservacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TN_IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TN_IdMesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TN_IdMenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TN_Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TF_FecReserva)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TN_NumReservacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TN_IdCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TN_IdMesa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TN_IdMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TN_Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TF_FecReserva)
        </td>
        <td>
            @Html.ActionLink("Editar", "modificarReservacion", new { pId = item.TN_NumReservacion }) |
            @Html.ActionLink("Detalles", "detalleReservacion", new { pId = item.TN_NumReservacion }) |
            @Html.ActionLink("Borrar", "eliminarReservacion", new { pId = item.TN_NumReservacion })
        </td>
    </tr>
}

</table>
